<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/dialog_rounded_window"
        android:backgroundTint="#DEB8FF">



    <EditText
        android:id="@+id/edit_current_weight_dialog_edit_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="המשקל הנוכחי שלי"
        android:fontFamily="@font/assistant"
        android:textSize="14dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:inputType="numberDecimal"/>


    <Button
        android:id="@+id/save_edit_current_weight_dialog_btn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/custom_button_3"
        android:textColor="#ffffff"
        android:text="שמור"
        android:fontFamily="@font/assistant"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="16dp"/>


    <TextView
        android:id="@+id/close_edit_current_weight_dialog_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תודה אבל התחרטתי"
        android:layout_gravity="center_horizontal"

        android:textSize="14dp"
        android:fontFamily="@font/assistant"
        android:textColor="#2D2D2D"
        android:layout_marginTop="18dp"
        android:textStyle="bold"/>


    </LinearLayout>

</RelativeLayout>