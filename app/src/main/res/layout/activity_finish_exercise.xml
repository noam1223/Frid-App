<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FinishExerciseActivity"
    android:background="#FFFFFF"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/set_head_line_text_view_finish_exercise_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/assistant_semibold"
        android:text="סט"
        android:textColor="#383838"
        android:textSize="19dp" />


    <RelativeLayout
        android:id="@+id/relative_layout_ellipse_image_area_finish_exercise_activity"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_below="@id/set_head_line_text_view_finish_exercise_activity"
        android:layout_centerHorizontal="true"
        android:gravity="center">


        <TextView
            android:id="@+id/num_of_set_text_view_finish_exercise_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant_semibold"
            android:text="3"
            android:textColor="#383838"
            android:textSize="30dp"
            android:layout_alignParentBottom="true"/>


        <TextView
            android:id="@+id/sum_of_set_text_view_finish_exercise_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/num_of_set_text_view_finish_exercise_activity"
            android:fontFamily="@font/assistant_semibold"
            android:text="/3"
            android:textColor="#383838"
            android:textSize="21dp" />


    </RelativeLayout>


    <TextView
        android:id="@+id/complete_text_line_text_view_finish_exercise_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_layout_ellipse_image_area_finish_exercise_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/assistant_semibold"
        android:text="הושלם"
        android:textColor="#10FFD6"
        android:textSize="40dp" />


    <ImageView
        android:id="@+id/finish_image_group_176_image_view_finish_exercise_activity"
        android:layout_width="130dp"
        android:layout_height="133dp"
        android:layout_below="@id/complete_text_line_text_view_finish_exercise_activity"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/ic_group_176"
        android:scaleX="0"
        android:scaleY="0"/>


    <TextView
        android:id="@+id/well_done_text_view_finish_exercise_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/finish_image_group_176_image_view_finish_exercise_activity"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/assistant_semibold"
        android:gravity="center"
        android:text="כל הכבוד!"
        android:textColor="#000000"
        android:textSize="29dp" />


    <TextView
        android:id="@+id/sub_text_view_finish_exercise_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/well_done_text_view_finish_exercise_activity"
        android:fontFamily="@font/assistant_semibold"
        android:gravity="center"
        android:text="החלק הקשה מאחורינו\nמומלץ לסיים עם גמישות"
        android:textColor="#7A7979"
        android:textSize="18dp" />


    <Button
        android:id="@+id/move_to_flexibility_exercise_btn_finish_exercise_activity"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_below="@id/sub_text_view_finish_exercise_activity"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_button_1"
        android:fontFamily="@font/assistant_semibold"
        android:text="עבור לגמישות"
        android:textColor="#ffffff"
        android:textSize="23dp"
        android:textStyle="bold"
        android:gravity="center"/>


    <TextView
        android:id="@+id/back_to_home_frag_text_view_finish_exercise_activity"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/move_to_flexibility_exercise_btn_finish_exercise_activity"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/assistant_semibold"
        android:gravity="center"
        android:text="חזרה לעמוד הבית"
        android:textColor="#A74DF5"
        android:textSize="19dp" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>