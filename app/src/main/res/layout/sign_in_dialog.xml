<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/dialog_rounded_window"
        android:backgroundTint="#DBC2FF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/assistant_semibold"
        android:text="וידוא אחרון לפני שמתחילים..."
        android:textColor="#000000"
        android:textSize="21dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/buttonColor"
        android:layout_alignParentTop="true"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="rtl">








        </LinearLayout>



        <RelativeLayout
            android:id="@+id/linear_layout_name_area_signin_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layoutDirection="rtl">

            <ImageView
                android:id="@+id/personal_image_view_sign_in_dialog"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_group_151"
                android:backgroundTint="@color/buttonColor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/first_last_name_text_view_sign_in_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/assistant_semibold"
                android:text="שם פרטי ומשפחה"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/linear_layout_name_area_signin_activity"
            android:layout_toRightOf="@+id/linear_layout_weight_area_signin_activity"
            android:layoutDirection="rtl">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_sex"
                android:backgroundTint="@color/buttonColor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/sex_text_view_sign_in_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant_semibold"
                android:text="מין"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"/>


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/linear_layout_weight_area_signin_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp">


            <ImageView
                android:id="@+id/weight_image_view_sign_in_dialog"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:background="@drawable/ic_group_156"
                android:backgroundTint="@color/buttonColor"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/weight_text_view_sign_in_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/assistant_semibold"
                android:textColor="#000000"
                android:text="משקל"
                android:textSize="16dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"/>



        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="8dp"
        android:background="@color/buttonColor"/>


    <TextView
        android:id="@+id/date_day_text_view_sign_in_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="תאריך כניסה : "
        android:textSize="18dp"
        android:textColor="#000000"
        android:gravity="center"
        android:fontFamily="@font/assistant"/>


    <Button
        android:id="@+id/go_to_home_activity_btn_sign_in_dialog"
        android:layout_width="175dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_button_3"
        android:text="מתחילים!"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:fontFamily="@font/assistant_semibold"/>



    <TextView
        android:id="@+id/cancel_text_view_clickable_sign_in_dialog"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:text="אני רוצה לשנות משהו"
        android:textSize="14dp"
        android:textColor="#2D2D2D"
        android:clickable="true"
        android:fontFamily="@font/assistant"
        android:background="#ffffff"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="#DBC2FF"/>


    </LinearLayout>


</RelativeLayout>