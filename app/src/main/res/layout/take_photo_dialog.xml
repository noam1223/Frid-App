<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/dialog_rounded_window"
        android:orientation="vertical"
        android:backgroundTint="#DEB8FF">


    <ImageView
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_camera_group_167"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="עדיין לא הצטלמנו השבוע!"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:textSize="21dp"
        android:textColor="#000000"
        android:fontFamily="@font/assistant_semibold"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="איך נראה את התוצאות לאימונים?"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/assistant_light"
        android:textColor="#000000"/>


    <Button
        android:id="@+id/go_to_profile_activity_btn_take_photo_dialog"
        android:layout_width="200dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="14dp"
        android:background="@drawable/custom_button_3"
        android:text="קדימה להצטלם!"
        android:textColor="#ffffff"
        android:textSize="17dp"
        android:fontFamily="@font/assistant"
        android:textStyle="bold"/>


    <TextView
        android:id="@+id/cancel_text_view_take_photo_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="תודה, אבל אצטלם אחר כך"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:textSize="14dp"
        android:textColor="#2D2D2D"
        android:fontFamily="@font/assistant"/>


    </LinearLayout>

</RelativeLayout>