<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linear_layout_start_area_sets_of_exercise_fragment">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/greyBackgroundScreenColor"
            android:paddingBottom="12dp"
            >


            <ImageButton
                android:id="@+id/back_fragment_btn_nav_sets_of_exercise"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="24dp"
                android:layout_marginRight="24dp"
                android:background="@color/greyBackgroundScreenColor"
                android:src="@drawable/ic_back_page_arrow" />


            <TextView
                android:id="@+id/head_line_text_view_nav_sets_of_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:fontFamily="@font/assistant_semibold"
                android:gravity="center"
                android:text="שבוע"
                android:textColor="#000000"
                android:textSize="21dp" />


            <RelativeLayout
                android:id="@+id/relative_layout_sub_texts_area_nav_set_of_exercise"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/head_line_text_view_nav_sets_of_exercise"
                android:layout_centerHorizontal="true">


                <TextView
                    android:id="@+id/sub_head_num_of_exercise_text_view_nav_sets_of_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@id/sub_head_sum_of_exercise_text_view_nav_sets_of_exercise"
                    android:fontFamily="@font/assistant"
                    android:text="1"
                    android:textColor="#000000"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/sub_head_sum_of_exercise_text_view_nav_sets_of_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@id/sub_head_line_text_view_nav_sets_of_exercise"
                    android:fontFamily="@font/assistant"
                    android:text="/2"
                    android:textColor="#000000"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/sub_head_line_text_view_nav_sets_of_exercise"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/assistant"
                    android:maxLines="1"
                    android:text="אימון כוח"
                    android:textColor="#2D2D2D"
                    android:textSize="14dp" />


            </RelativeLayout>


            <TextView
                android:id="@+id/part_body_head_lind_text_view_nav_sets_of_exercise"
                android:layout_width="90dp"
                android:layout_height="21dp"
                android:layout_below="@id/relative_layout_sub_texts_area_nav_set_of_exercise"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/sub_heat_line_background"
                android:fontFamily="@font/assistant_semibold"
                android:gravity="center"
                android:maxLines="1"
                android:text="ידיים + בטן"
                android:textColor="#ffffff"
                android:textSize="14dp" />


            <LinearLayout
                android:id="@+id/linear_layout_image_view_area_nav_sets_of_exercise"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/part_body_head_lind_text_view_nav_sets_of_exercise"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_layout_equipment_one_nav_sets_of_exercise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image_of_equipment_one_nav_sets_of_exercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_weight_3_5" />


                    <TextView
                        android:id="@+id/text_view_of_equipment_one_nav_sets_of_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/assistant_light"
                        android:gravity="center"
                        android:text="משקולות 3-5 ק״ג"
                        android:textColor="#807E7E"
                        android:textSize="14dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_layout_equipment_two_nav_sets_of_exercise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/image_of_equipment_two_nav_sets_of_exercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_weight_3_5"
                        />


                    <TextView
                        android:id="@+id/text_view_of_equipment_two_nav_sets_of_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/assistant_light"
                        android:gravity="center"
                        android:text="משקולות 3-5 ק״ג"
                        android:textColor="#807E7E"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_layout_equipment_three_nav_sets_of_exercise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <ImageView
                        android:id="@+id/image_of_equipment_three_nav_sets_of_exercise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_weight_3_5" />


                    <TextView
                        android:id="@+id/text_view_of_equipment_three_nav_sets_of_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/assistant_light"
                        android:gravity="center"
                        android:text="משקולות 3-5 ק״ג"
                        android:textColor="#807E7E"
                        android:textSize="14dp" />


                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/buttons_set_relative_layout_area_nav_sets_of_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear_layout_image_view_area_nav_sets_of_exercise"
                android:layout_marginTop="24dp">


                <LinearLayout
                    android:id="@+id/linear_layout_first_set_area_sets_of_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <Button
                            android:id="@+id/first_set_exercise_btn_nav_choose_exercise"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:background="@drawable/custom_button_bottom_top_line"
                            android:fontFamily="@font/assistant_semibold"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="סט ראשון"
                            android:textColor="@color/buttonColor"
                            android:textSize="21dp"
                            app:layout_constraintTop_toTopOf="parent" />


                        <ImageView
                            android:id="@+id/first_arrow_img_view_sets_of_exercise_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/ic_group_122"
                            app:layout_constraintBottom_toBottomOf="@id/first_set_exercise_btn_nav_choose_exercise"
                            app:layout_constraintLeft_toLeftOf="@id/first_set_exercise_btn_nav_choose_exercise"
                            app:layout_constraintTop_toTopOf="@id/first_set_exercise_btn_nav_choose_exercise" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/first_set_list_view_nav_sets_of_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#C4C4C4" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_layout_second_set_area_sets_of_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_layout_first_set_area_sets_of_exercise"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/second_set_exercise_btn_nav_choose_exercise"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:background="@drawable/custom_button_bottom_top_line"
                            android:fontFamily="@font/assistant_semibold"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="סט שני"
                            android:textColor="@color/buttonColor"
                            android:textSize="21dp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/second_arrow_img_view_sets_of_exercise_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/ic_group_122"
                            app:layout_constraintBottom_toBottomOf="@id/second_set_exercise_btn_nav_choose_exercise"
                            app:layout_constraintLeft_toLeftOf="@id/second_set_exercise_btn_nav_choose_exercise"
                            app:layout_constraintTop_toTopOf="@id/second_set_exercise_btn_nav_choose_exercise" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/second_set_list_view_nav_sets_of_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#C4C4C4" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linear_layout_third_set_area_sets_of_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear_layout_second_set_area_sets_of_exercise"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layoutDirection="rtl"
                    android:orientation="vertical">



                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/third_set_exercise_btn_nav_choose_exercise"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:background="@drawable/custom_button_bottom_top_line"
                            android:fontFamily="@font/assistant_semibold"
                            android:gravity="center_vertical"
                            android:padding="10dp"
                            android:text="סט שלישי"
                            android:textColor="@color/buttonColor"
                            android:textSize="21dp"
                            app:layout_constraintTop_toTopOf="parent" />


                        <ImageView
                            android:id="@+id/third_arrow_img_view_sets_of_exercise_fragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:background="@drawable/ic_group_122"
                            app:layout_constraintBottom_toBottomOf="@id/third_set_exercise_btn_nav_choose_exercise"
                            app:layout_constraintLeft_toLeftOf="@id/third_set_exercise_btn_nav_choose_exercise"
                            app:layout_constraintTop_toTopOf="@id/third_set_exercise_btn_nav_choose_exercise" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/third_set_list_view_nav_sets_of_exercise"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#C4C4C4" />


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>


    <LinearLayout
        android:id="@+id/linear_layout_start_area_sets_of_exercise_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#C9FFFFFF"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        app:layout_constraintBottom_toBottomOf="parent">


        <Button
            android:id="@+id/start_sets_exercise_btn_nav_choose_exercise"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:background="@drawable/start_activity_set_btn"
            android:fontFamily="@font/assistant_semibold"
            android:text="התחלת אימון"
            android:textColor="#ffffff"
            android:textSize="23dp" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>