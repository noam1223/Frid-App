        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/welcome_user_text_view_nav_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/assistant"
                android:gravity="center"
                android:text="היי נועם, בוקר טוב"
                android:textColor="#383737"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/num_of_weeks_text_view_nav_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcome_user_text_view_nav_home"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/assistant_semibold"
                android:gravity="center"
                android:text="שבוע 2"
                android:textColor="#383737"
                android:textSize="21dp"
                android:textStyle="bold" />



            <ImageView
                android:id="@+id/still_in_bad_image_view_home_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_still_in_bad_image"
                android:layout_below="@id/num_of_weeks_text_view_nav_home"
                android:layout_marginTop="12dp"
                android:layout_centerHorizontal="true"
                android:visibility="invisible"/>



            <RelativeLayout
                android:id="@+id/progress_view_area_nav_home"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_below="@id/num_of_weeks_text_view_nav_home"
                android:layout_marginTop="12dp">


