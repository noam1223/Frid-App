<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fridapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="false"
        android:testOnly="false"
        android:theme="@style/Theme.FridApp"
        android:windowSoftInputMode="stateHidden|adjustPan">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SigninActivity" />
        <activity android:name=".activities.FinishFullExerciseActivity"/>
        <activity android:name=".activities.FinishExerciseActivity" />
        <activity android:name=".activities.FinishSetActivity" />
        <activity
            android:name=".activities.HomePageActivity"
            android:configChanges="orientation|screenLayout"
            android:label="@string/title_activity_home_page" />
    </application>

</manifest>